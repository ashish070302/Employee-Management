@model Employee.UI.ViewModels.Account.SignUpUserViewModel
@{
	ViewData["Title"] = "SignUp";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	body {
		background-color: #f5f5f5; /* Off-white background color */
		color: #000; /* Black text color */
	}
</style>

<div class="container mt-10 pt-5">
	<div class="row">
		<div class="col-8 offset-2 border border-primary rounded pl-5 pr-5 pb-5 mt-2">
			<div class="text-center">
				<h1 class="text-info">User Registration form</h1>
			</div>
			<hr />
			<form method="post" asp-action="SignUp">
				<div class="form-group">
					<label asp-for="Username"></label>
					<input type="text" asp-for="Username" placeholder="Enter username" class="form-control" autocomplete="off" />
					<span asp-validation-for="Username" class="text-danger"></span>
				</div><br />
				<div class="form-group">
					<label asp-for="Email"></label>
					<input type="text" asp-for="Email" class="form-control" placeholder="Enter email" autocomplete="off" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div><br />
				<div class="form-group">
					<label asp-for="Mobile"></label>
					<input type="text" asp-for="Mobile" class="form-control" placeholder="Enter mobile number" autocomplete="off" />
					<span asp-validation-for="Mobile" class="text-danger"></span>
				</div><br />
				<div class="row">
					<div class="col-6">
						<div class="form-group">
							<label asp-for="Password"></label>
							<input type="password" asp-for="Password" class="form-control" placeholder="Enter password" autocomplete="off" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
					</div>
					<div class="col-6">
						<div class="form-group">
							<label asp-for="ConfirmPassword"></label>
							<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Enter confirm password" autocomplete="off" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="IsActive"></label>
					<input type="checkbox" checked="checked" asp-for="IsActive" />
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-success btn-lg mb-1" style="float: right;" value="Register" />
				</div>
			</form>
		</div>
	</div>
</div>

